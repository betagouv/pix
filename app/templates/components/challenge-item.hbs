<div class="rounded-panel challenge-statement">
    <p class="challenge-instruction">{{ challenge.instruction }}</p>
</div>

<div class="rounded-panel challenge-response">
    <div class="challenge-proposals">
      {{#each challenge.proposalsAsArray as |proposal|}}
          <p class="challenge-proposal">
              <label>{{input type="radio" name="proposals"}} {{ proposal }}</label>
          </p>
      {{/each}}
    </div>

  {{#unless isChallengePreviewMode}}
    <hr/>
    <div class="actions pull-right">
        <button class="button button-secondary skip-button">Passer</button>
        <button class="button button-primary validate-button" {{action "validate" }}>Valider</button>
    </div>
  {{/unless}}

</div>
