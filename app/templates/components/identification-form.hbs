<form id="identification-form">
    <div id="firstname" class="form-group">
        <label class="control-label" for="firstname_input">Pr√©nom</label>
        {{input id="firstname_input" class="form-control" value=session.firstname type="text" placeholder="Jon" autocomplete="on" required="true"}}
    </div>

    <div id="lastname" class="form-group">
        <label class="control-label" for="lastname_input">Nom</label>
        {{input id="lastname_input" class="form-control" value=session.lastname type="text" placeholder="Snow" autocomplete="on" required="true"}}
    </div>

    <div id="email" class="form-group">
        <label class="control-label" for="email_input">Email</label>
        {{input id="email_input" class="form-control" value=session.email type="email" placeholder="jon.snow@winterfell.got" autocomplete="on" required="true"}}
    </div>

    <div class="identification-form-actions pull-right">
        {{input action="identify" type="submit" class="button button-primary" value="Identifiez-vous"}}
    </div>
</form>
