<div id="challenge-preview" data-id="{{ model.challenge.id }}" class="challenge-preview">
    <div class="container">

        <div class="title">
            Prévisualisation de l'épreuve #{{ model.challenge.id }}
        </div>

        <p>Consigne :</p>
        <div class="rounded-panel challenge-instruction">
            <p>{{ model.challenge.instruction }}</p>
        </div>

        <p>Réponse :</p>
        <div class="rounded-panel challenge-proposals">
          {{#each model.challenge.proposalsAsArray as |proposal|}}
              <p>
                  <label>{{input type="radio" name="proposals"}} {{ proposal }}</label>
              </p>
          {{/each}}
        </div>

      {{#if model.hasNextChallenge}}
        {{#link-to "courses.get-challenge-preview" model.course.id model.nextChallenge.id class="btn btn-primary next-challenge-button"}}Épreuve suivante{{/link-to}}
      {{/if}}
    </div>
</div>
