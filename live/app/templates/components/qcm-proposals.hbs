{{#each labeledCheckboxes as |labeledCheckbox index|}}
  <p class="challenge_response__proposal">
    <label class="challenge_response__proposal-label">

        {{!-- checkbox --}}
        <input
          type="checkbox"
          name="{{inc index}}"
          checked={{labeledCheckbox.[1]}}
          onclick={{action "checkboxClicked"}} />

        {{!-- text of proposal  --}}
        {{labeledCheckbox.[0]}}

      </label>
  </p>
{{/each}}

