{{#each labeledRadios as |labeledRadio index|}}
  <p class="challenge_response__proposal">
    <label class="challenge_response__proposal-label">

      {{!-- Radio button --}}
      <input class="challenge_response__proposal-input"
             type="radio"
             name="{{inc index}}"
             checked={{labeledRadio.[1]}}
             onclick={{action "radioClicked" index}} />

      {{!-- text of proposal  --}}
      {{labeledRadio.[0]}}

    </label>
  </p>
{{/each}}

