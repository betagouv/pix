<form id="identification-form" {{action "identify" on="submit"}}>

  <div class="form-group">
    <label for="firstName">Prénom</label>
    <input type="text" class="form-control" id="inputFirstName" placeholder="Votre prénom">
  </div>

  <div class="form-group">
    <label for="lastName">Nom</label>
    <input type="text" class="form-control" id="inputLastName" placeholder="Votre nom">
  </div>

  <div class="form-group">
    <label for="email">Adresse e-mail</label>
    <input type="email" class="form-control" id="inputEmail" placeholder="Email">
  </div>

  <div class="form-group">
    <label for="email">Mot de passe </label>
    <input type="password" class="form-control" id="inputPassword" placeholder="Mot de passe">
  </div>

  <div class="form-group">
    <label for="email">Confirmation mot de passe </label>
    <input type="password" class="form-control" id="inputPasswordConfirm" placeholder="Mot de passe">
  </div>

  <div class="form-group">
    <div class="checkbox">
      <label>
        <input type="checkbox" id="inputHasAcceptedCGU">
        J'accepte les CGU
      </label>
    </div>
  </div>

  <div class="identification-form-actions pull-right">
    <button class="button button-primary" type="submit">Enregistrez-vous</button>
  </div>

</form>
