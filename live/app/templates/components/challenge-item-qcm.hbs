
{{challenge-instruction instruction=instruction}}

<div class="rounded-panel challenge-response">
  <div class="challenge-proposals">
    {{qcm-proposals 
        answers=answers._valueAsArrayOfBoolean 
        proposals=challenge._proposalsAsArray
        onAnswerUpdated='updateAnswer'}}
  </div>
</div>

{{#if errorMessage}}
  <div class="alert alert-danger" role="alert">
    {{errorMessage}}
  </div>
{{/if}}

{{#if assessment}}
  {{challenge-actionbar
      skip="skip"
      validate="validate"}}
{{/if}}
