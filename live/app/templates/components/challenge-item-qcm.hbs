
{{challenge-instruction instruction=instruction}}

<div class="rounded-panel challenge-response">
    <div class="challenge-proposals">
      {{qcm-proposals rawAnswers=answers rawProposals=challenge._proposalsAsArray}}
    </div>
</div>

{{#if errorMessage}}
    <div class="alert alert-danger" role="alert">
      {{errorMessage}}
    </div>
{{/if}}

{{#if assessment}}
  {{challenge-actionbar
      skip="skip"
      validate="validate"}}
{{/if}}
