<div class="qrocm-solution-panel rounded-panel">
  <div class="rounded-panel__row ">

    <div>
      {{#each dataToDisplay as |row|}}
        <div class="correction-qrocm">

          <div class="correction-qrocm__label">
            <span>{{row.label}}</span>
          </div>

          <div class="correction-qrocm__answer-solution">
            <div class="correction-qrocm__answer">
              <input value="{{row.answer}}"
                     class="correction-qrocm__answer-input
                   {{if row.rightAnswer "correction-qroc-box__input-right-answer"}}
                       {{if row.noAnswer "correction-qroc-box__input-no-answer"}}
                       {{if row.wrongAnswer "correction-qroc-box__input-wrong-answer"}}"
                     disabled>
            </div>

            {{#unless row.rightAnswer}}
              <div class="correction-qrocm__solution">
                <svg style="width:18px;height:18px" viewBox="0 0 24 24">
                  <path fill="#12caa1"
                        d="M5,21A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3H19A2,2 0 0,1 21,5V19C21,20.11 20.1,21 19,21H5M6,13H14.5L11,16.5L12.42,17.92L18.34,12L12.42,6.08L11,7.5L14.5,11H6V13Z"/>
                </svg>
                <div class="correction-qrocm__solution-text">
                  {{row.solution}}
                </div>
              </div>
            {{/unless}}
          </div>

        </div>
      {{/each}}
    </div>

  </div>
</div>

