{{#each blocks as |block|}}

  {{#if block.text}}
    <span>{{block.text}}</span>
  {{/if}}
  
  
  {{#if block.input}}
    <input 
      type="text" 
      data-uid="qrocm-proposal-uid"
      name={{block.input}}
      placeholder={{block.placeholder}}
    >
  {{/if}}
  
  {{#if block.breakline}}
    <hr>
  {{/if}} 

{{/each}}
